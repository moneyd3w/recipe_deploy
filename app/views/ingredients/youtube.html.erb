<div class="d-flex align-items-center justify-content-center">
  <h2>Try some inspiration from YouTube</h2>
</div>

<div class="container col-md-4 align-items-center justify-content-center">
  <%= form_tag(search_youtube_path, method: :get, class: "d-flex justify-content-between") do %>
    <%= text_field_tag(:search, nil, class: "form-control", placeholder: "e.g. Chocolate Cake", style: "width: 100%;") %>
    <%= submit_tag("Search Youtube", class: "btn btn-danger") %>
  <% end %>
</div>

<br>
<br>

<% if @videoResults.present? %>
  <h3>Search Results for: <%= @searchParam %></h3>
  <div class="row">
    <% @videoTitles.each_with_index do |title, index| %>
      <div class="col-md-2 mb-3">
        <div class="card">
          <div class="image-container" style="width: 100%; padding-bottom: 70%; position: relative; overflow: hidden;">
            <%= image_tag @videoThumbnailURLs[index], class: "restricted-image", style: "width: 100%; height: 100%; position: absolute; object-fit: cover;" %>
          </div>
          <div class="card-body">
            <h6 class="card-title"><%= link_to title, @videoURLs[index], target: "_blank" %></h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No search results available.</p>
<% end %>

<br>
<br>

<%= link_to "Back to view recipes", "/view", class: 'btn btn-dark' %>

<style>
  .card-title {
    max-height: 3 * 1.2em; /* Adjust the line height as needed */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1; /* Limit the number of lines */
    -webkit-box-orient: vertical;
  }
</style>